# Supabase Configuration
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to git!

# Supabase Project URL
VITE_SUPABASE_URL=your_supabase_project_url

# Supabase Anon/Public Key
VITE_SUPABASE_PUBLISHABLE_KEY=your_supabase_anon_key

# Security Configuration
VITE_ENABLE_EMAIL_VERIFICATION=true
VITE_ENABLE_RATE_LIMITING=true
VITE_MAX_SIGNUP_ATTEMPTS=3
VITE_RATE_LIMIT_WINDOW_MS=900000

# Optional: reCAPTCHA Configuration (recommended for production)
# VITE_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
# VITE_RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# Session Configuration
VITE_SESSION_TIMEOUT_MS=1800000
VITE_SESSION_WARNING_MS=300000

# Allowed Email Domains (comma-separated)
VITE_ALLOWED_EMAIL_DOMAINS=um6p.ma,gmail.com

# Development Mode (set to false in production)
VITE_DEV_MODE=false
